{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload Power Pages to Dev",
            "type": "shell",
            "command": "pac pages upload --path powerpages --environment https://org601a79e1.crm.dynamics.com",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Validate Power Pages Structure",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "scripts/validate-structure.ps1"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run Power Pages Tests",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "presentation": {
                "reveal": "always"
            },
            "group": "test",
            "problemMatcher": []
        }
    ]
} 